<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_4mdp">

    <View
        android:id="@+id/view_head"
        android:layout_width="@dimen/_74mdp"
        android:layout_height="@dimen/_24mdp"
        android:background="@drawable/bg_sort"
        android:backgroundTint="@color/light_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_6mdp"/>
    <View
        android:id="@+id/view_1"
        android:layout_width="@dimen/_64mdp"
        android:layout_height="@dimen/_24mdp"
        android:background="@drawable/bg_sort"
        android:backgroundTint="@color/light_gray" />
    <View
        android:id="@+id/view_2"
        android:layout_width="@dimen/_64mdp"
        android:layout_height="@dimen/_24mdp"
        android:background="@drawable/bg_sort"
        android:backgroundTint="@color/light_gray" />
    <View
        android:id="@+id/view_3"
        android:layout_width="@dimen/_64mdp"
        android:layout_height="@dimen/_24mdp"
        android:background="@drawable/bg_sort"
        android:backgroundTint="@color/light_gray" />
    <View
        android:id="@+id/view_4"
        android:layout_width="@dimen/_64mdp"
        android:layout_height="@dimen/_24mdp"
        android:background="@drawable/bg_sort"
        android:backgroundTint="@color/light_gray" />
    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_head"
        app:constraint_referenced_ids="view_1,view_2,view_3,view_4"
        android:layout_marginTop="@dimen/_4mdp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>