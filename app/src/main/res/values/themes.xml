<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Drdr" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Drdr" parent="Base.Theme.Drdr">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorOnSecondary">@color/Bright_Gray</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurfaceContainer">@color/Bright_Gray</item>
        <item name="colorSurface">@color/Outer_Space</item>
        <item name="colorOnSurfaceVariant">@color/Outer_Space</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="materialSwitchStyle">@style/Switch.Default</item>
        <item name="colorContainer">@color/Bright_Gray</item>
        <item name="colorPrimary">@color/Outer_Space</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="chipStyle">@style/ChipStyleTag</item>

    </style>
    <!--bottom navigation-->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorSurfaceContainer">@color/white</item>
        <item name="colorOnSurfaceVariant">@android:color/transparent</item>
        <item name="itemRippleColor">@color/white</item>
        <item name="colorSurface">@color/Bright_Gray</item>
        <item name="backgroundColor">@color/white</item>
        <item name="itemShapeInsetBottom">0dp</item>
    </style>
    <!--switch-->
    <style name="Switch.Default" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbIcon">@drawable/switch_icon</item>
        <item name="checkedIconSize">16dp</item>
        <item name="selectorSize">16dp</item>
        <item name="iconSize">16dp</item>
        <item name="drawableSize">16dp</item>
        <item name="itemIconSize">16dp</item>
        <item name="maxImageSize">16dp</item>
        <item name="thumbIconTint">@color/white</item>
        <item name="trackDecorationTint">@color/white</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSurfaceVariant">@color/Brandeis_Blue</item>
    </style>
    <!--TextSize||fontBold-->
    <style name="TextAppearance_Bold">
        <item name="android:textSize">@dimen/_14font_mdp</item>
        <item name="fontPath">fonts/is_bold.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance_light">
        <item name="android:textSize">@dimen/_12font_mdp</item>
        <item name="fontPath">fonts/is_light.ttf</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--TextSize||fontBold Mobile-->
    <style name="TextAppearance_mobile_bold">
        <item name="android:textSize">@dimen/_10font_mdp</item>
        <item name="fontPath">fonts/is_mobile_bold.ttf</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--TextSize||Farsi-Digits-->
    <style name="TextAppearance_Farsi_Digits">
        <item name="android:textSize">@dimen/_10font_mdp</item>
        <item name="fontPath">fonts/tanha_fd.ttf</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--snackbar button-->
    <style name="Widget.App.SnackbarButton" parent="Widget.Material3.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/white</item>
    </style>
    <!--round imageview-->
    <style name="ProfileRound">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SequenceImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8%</item>
    </style>

    <style name="RoundImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12%</item>
    </style>
    <!-- material button-->
    <style name="GreenMaterialButton" parent="ThemeOverlay.Material3.Button">
        <item name="backgroundTint">@color/North_Texas_Green</item>
        <item name="cornerRadius">@dimen/_15mdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconStartPadding">@dimen/_6mdp</item>
        <item name="android:textSize">@dimen/_12font_mdp</item>
        <item name="android:inset">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance_Bold</item>
    </style>
    <!--chip style-->
    <style name="ChipStyleTag" parent="Widget.Material3.Chip.Input">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/light_gray</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="chipIconEnabled">false</item>
        <item name="chipIcon">@null</item>
        <item name="closeIconVisible">false</item>
        <item name="closeIconEnabled">false</item>
        <item name="chipCornerRadius">@dimen/_6mdp</item>
        <item name="chipStartPadding">@dimen/_6mdp</item>
        <item name="chipEndPadding">@dimen/_6mdp</item>
        <item name="android:textAppearance">@style/TextAppearance.App.BodyMedium</item>
        <item name="android:inset">0dp</item>

    </style>

    <style name="TextAppearance.App.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textAppearance">@style/TextAppearance_Bold</item>
        <item name="itemTextColor">@color/Raisin_Black</item>
    </style>

    <!--Tab layout-->
    <style name="Widget.App.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabBackground">@drawable/tab_layout_selector</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabPadding">@dimen/_8mdp</item>
        <item name="iconSize">@dimen/_12mdp</item>
        <item name="android:inset">0dp</item>
        <item name="indicatorTrackGapSize">0dp</item>
        <item name="tabIconTint">@color/item_icon_tint</item>
        <item name="tabInlineLabel">true</item>
        <item name="indicatorSize">0dp</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/Cultured</item>
        <item name="colorSurface">@color/Cultured</item>
        <item name="colorOnSurface">@color/Cultured</item>
    </style>

    <style name="TabLayoutFontNormal" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/tanha_fd</item>
        <item name="android:fontFamily">@font/tanha_fd</item>
        <item name="android:textSize">@dimen/_10font_mdp</item>
    </style>

    <style name="TabLayoutFontBold" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/is_bold</item>
        <item name="android:fontFamily">@font/is_bold</item>
        <item name="android:textSize">@dimen/_10font_mdp</item>
    </style>
</resources>