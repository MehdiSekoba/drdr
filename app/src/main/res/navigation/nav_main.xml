<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.mehdisekoba.drdr.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" />
    <action
        android:id="@+id/action_splash_to_home"
        app:destination="@id/homeFragment" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mehdisekoba.drdr.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/doctorFragment"
        android:name="com.mehdisekoba.drdr.ui.doctor.DoctorFragment"
        android:label="fragment_doctor"
        tools:layout="@layout/fragment_doctor" />
    <fragment
        android:id="@+id/inningsFragment"
        android:name="com.mehdisekoba.drdr.ui.innings.InningsFragment"
        android:label="fragment_innings"
        tools:layout="@layout/fragment_innings" />
    <action
        android:id="@+id/action_profileF_to_innings"
        app:destination="@id/inningsFragment" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.mehdisekoba.drdr.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile"/>
</navigation>